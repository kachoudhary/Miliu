<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Fragments.fragment_claimainpage">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_marginTop="15dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:paddingLeft="8dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_border_edittext"
        android:text="claim details"
        android:textAlignment="viewStart"
        android:textAllCaps="true"
        android:textSize="15dp"
        android:textColor="@color/cardview_dark_background"
        android:textStyle="normal" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_border_edittext2"
        android:textAlignment="viewStart"
        android:textAllCaps="true"
        android:textSize="15dp"
        android:textColor="@color/cardview_dark_background"
        android:textStyle="normal" >
          <ImageView
              android:paddingTop="10dp"
              android:paddingLeft="8dp"
              android:paddingBottom="10dp"
              android:layout_width="150dp"
              android:layout_height="150dp"
              android:src="@drawable/claim_form_sample"
              android:scaleType="centerInside"  />

        <LinearLayout
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Claim No. - FNOL-30"
                android:textAlignment="center"
                android:textSize="14dp"
                android:textColor="@color/cardview_dark_background"
                android:textStyle="normal" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Requested by - Claire Goodman"
                android:textAlignment="center"
                android:textSize="14dp"
                android:textColor="@color/cardview_dark_background"
                android:textStyle="normal" />
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="17dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_border_edittext3"
        android:text="Additional documents are required to process your claim"
        android:textAlignment="center"
        android:textSize="14dp"
        android:textColor="#FF0000"
        android:textStyle="normal" />
    <TextView
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_border_edittext2"
        android:text="Please upload the pending documents and submit for further verification"
        android:textAlignment="center"
        android:textSize="14dp"
        android:textColor="@color/cardview_dark_background"
        android:textStyle="normal" />
    <Button
        android:layout_marginTop="45dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:textSize="15sp"
        android:text="upload"
        android:background="@drawable/claimbutton"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/cardview_light_background"
        android:textAllCaps="true"
        android:id="@+id/uploadbtn" />
</LinearLayout>