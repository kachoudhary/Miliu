<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Fragments.Fragment1"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:padding="0dp"
        android:scaleType="centerInside"
        android:src="@drawable/logo2" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="?attr/colorButtonNormal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="know about our company"
        android:textAllCaps="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="3dp"
        android:textAppearance="@color/cardview_dark_background"
        android:textSize="15dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="We are an Insurance Company"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:textAppearance="@color/cardview_dark_background"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="With a experience of over 10 years, miliu has contributed significantly to the growth and development of the general insurance industry in the United States of America and currently ranks amongst the top 3 private general insurance companies in the country. Known for its innovation and creating industry benchmarks, miliu has several fisrts to its credit.It was the first American Insurance Company to introduce 'Free Look Period' "
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textAppearance="@color/cardview_dark_background"
        android:textSize="15dp"/>

</LinearLayout>