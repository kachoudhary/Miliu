<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context=".View.Activities.RaiseClaimActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <android.support.v7.widget.CardView
        android:gravity="center"
        android:keepScreenOn="true"
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ScrollView
                android:fillViewport="true"
                android:id="@+id/mainscrollbar"
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >
                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:padding="0dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/logo2" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:background="?attr/colorButtonNormal" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/rounded_border_linearlayout"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="VIN"
                            android:layout_marginTop="15dp"
                            android:textAlignment="center"
                            android:textColor="@color/cardview_dark_background"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:textSize="20sp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_height="wrap_content"
                            android:text="Take photo of the VIN plate located on the driver's door jamb"
                            android:textAlignment="center"
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="15sp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_height="wrap_content"
                            android:text="Click on the sample image to upload"
                            android:textAlignment="center"
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="13sp" />
                        <ImageView
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/number_plate"
                            android:textAlignment="center"
                            android:layout_gravity="center_vertical"
                            android:id="@+id/vinnumberimage"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"  />




                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Number Plate"
                            android:layout_marginTop="15dp"
                            android:textAlignment="center"
                            android:textColor="@color/cardview_dark_background"
                            android:textStyle="bold"
                            android:textSize="20sp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_height="wrap_content"
                            android:text="Take photo of the license plate of the damaged car"
                            android:textAlignment="center"
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="15sp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_height="wrap_content"
                            android:text="Click on the sample image to upload"
                            android:textAlignment="center"
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="13sp" />
                        <ImageView
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/number_plate"
                            android:textAlignment="center"
                            android:layout_gravity="center_vertical"
                            android:id="@+id/numberplateimage"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"  />



                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Front Right"
                            android:textAlignment="center"
                            android:textColor="@color/cardview_dark_background"
                            android:textStyle="bold"
                            android:layout_marginTop="15dp"
                            android:textSize="20sp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_height="wrap_content"
                            android:text="Take photo of the front portion of the right side of your car"
                            android:textAlignment="center"
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="15sp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_height="wrap_content"
                            android:text="Click on the sample image to upload"
                            android:textAlignment="center"
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="13sp" />

                        <ImageView
                            android:id="@+id/frontrightimage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="20dp"
                            android:layout_marginTop="10dp"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/front_right"
                            android:textAlignment="center" />




                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Front Left"
                            android:layout_marginTop="15dp"
                            android:textAlignment="center"
                            android:textColor="@color/cardview_dark_background"
                            android:textStyle="bold"
                            android:textSize="20sp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_height="wrap_content"
                            android:text="Take photo of the VIN plate located on the driver's door jamb"
                            android:textAlignment="center"
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="15sp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_height="wrap_content"
                            android:text="Click on the sample image to upload"
                            android:textAlignment="center"
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="13sp" />

                        <ImageView
                            android:id="@+id/frontleftimage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="20dp"
                            android:layout_marginTop="10dp"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/front_left"
                            android:textAlignment="center" />




                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Back Right"
                            android:layout_marginTop="15dp"
                            android:textAlignment="center"
                            android:textColor="@color/cardview_dark_background"
                            android:textStyle="bold"
                            android:textSize="20sp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_height="wrap_content"
                            android:text="Take photo of the back portion of the right side of your car"
                            android:textAlignment="center"
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="15sp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_height="wrap_content"
                            android:text="Click on the sample image to upload"
                            android:textAlignment="center"
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="13sp" />

                        <ImageView
                            android:id="@+id/backrightimage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="20dp"
                            android:layout_marginTop="10dp"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/back_right"
                            android:textAlignment="center" />


                        <TextView
                            android:layout_marginTop="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Back Left"
                            android:textAlignment="center"
                            android:textColor="@color/cardview_dark_background"
                            android:textStyle="bold"
                            android:textSize="20sp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_height="wrap_content"
                            android:text="Take photo of the back portion of the left side of your car"
                            android:textAlignment="center"
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="15sp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_height="wrap_content"
                            android:text="Click on the sample image to upload"
                            android:textAlignment="center"
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="13sp" />

                        <ImageView
                            android:id="@+id/backleftimage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="20dp"
                            android:layout_marginTop="10dp"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/back_left"
                            android:textAlignment="center" />



                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Side Left"
                            android:layout_marginTop="15dp"
                            android:textAlignment="center"
                            android:textColor="@color/cardview_dark_background"
                            android:textStyle="bold"
                            android:textSize="20sp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_height="wrap_content"
                            android:text="Take photo of the left side body of your car"
                            android:textAlignment="center"
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="15sp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_height="wrap_content"
                            android:text="Click on the sample image to upload"
                            android:textAlignment="center"
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="13sp" />
                        <ImageView
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/number_plate"
                            android:textAlignment="center"
                            android:layout_gravity="center_vertical"
                            android:id="@+id/sideleftimage"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"  />




                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Side Right"
                            android:layout_marginTop="15dp"
                            android:textAlignment="center"
                            android:textColor="@color/cardview_dark_background"
                            android:textStyle="bold"
                            android:textSize="20sp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_height="wrap_content"
                            android:text="Take photo of the right side body of your car"
                            android:textAlignment="center"
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="15sp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_height="wrap_content"
                            android:text="Click on the sample image to upload"
                            android:textAlignment="center"
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="13sp" />

                        <ImageView
                            android:id="@+id/siderightimage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="20dp"
                            android:layout_marginTop="10dp"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/back_right"
                            android:textAlignment="center" />



                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Damage-1"
                            android:layout_marginTop="15dp"
                            android:textAlignment="center"
                            android:textColor="@color/cardview_dark_background"
                            android:textStyle="bold"
                            android:textSize="20sp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_height="wrap_content"
                            android:text="Take a close photo of the damaged area of the car"
                            android:textAlignment="center"
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="15sp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_height="wrap_content"
                            android:text="Click on the sample image to upload"
                            android:textAlignment="center"
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="13sp" />

                        <ImageView
                            android:id="@+id/damageoneimage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="20dp"
                            android:layout_marginTop="10dp"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/damage1"
                            android:textAlignment="center" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="70dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:weightSum="10">
                        <Button
                            android:layout_width="40dp"
                            android:layout_height="50dp"
                            android:textAlignment="center"
                            android:textSize="15sp"
                            android:text="upload images"
                            android:textStyle="bold"
                            android:layout_weight="5"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center"
                            android:textColor="@color/cardview_light_background"
                            android:textAllCaps="true"
                            android:background="@drawable/claimbutton"
                            android:id="@+id/uploadbtn" />
                        <Button
                            android:layout_width="40dp"
                            android:layout_height="50dp"
                            android:textAlignment="center"
                            android:textSize="15sp"
                            android:text="clear all"
                            android:textStyle="bold"
                            android:layout_weight="5"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center"
                            android:textColor="@color/cardview_light_background"
                            android:textAllCaps="true"
                            android:background="@drawable/claimbutton"
                            android:id="@+id/clearbtn" />
                       </LinearLayout>

                </LinearLayout>
            </ScrollView>
            <LinearLayout
                android:layout_alignParentEnd="true"
                android:id="@+id/footer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentBottom="true"
                android:gravity="center"  >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:background="#282a57"
                    android:layout_gravity="center"
                    android:gravity="center" >
                    <TextView
                        android:id="@+id/homebutton"
                        android:layout_marginRight="9dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Home"
                        android:textColor="@color/cardview_light_background"
                        android:textSize="15sp" />
                    <View
                        android:layout_marginRight="9dp"
                        android:layout_width="1dp"
                        android:layout_height="17sp"
                        android:layout_gravity="center"
                        android:background="@android:color/darker_gray" />
                    <TextView
                        android:id="@+id/claimbutton"
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Raise a Claim"
                        android:textColor="@color/cardview_light_background"
                        android:textSize="15sp" />
                    <View
                        android:layout_marginRight="9dp"
                        android:layout_width="1dp"
                        android:layout_height="17sp"
                        android:layout_gravity="center"
                        android:background="@android:color/darker_gray" />
                    <TextView
                        android:id="@+id/accountbutton"
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="My Account"
                        android:textColor="@color/cardview_light_background"
                        android:textSize="15sp"  />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Powered by Wipro Digital Experience Platform (DXP)"
                    android:background="@color/cardview_light_background"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textAlignment="center"  />

            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            style="?metaButtonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/black_overlay"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <Button
                android:id="@+id/dummy_button"
                style="?metaButtonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/dummy_button" />

        </LinearLayout>
    </FrameLayout>

</FrameLayout>